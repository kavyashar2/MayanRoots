rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /weatherForecasts/{document} {
      allow read: if true;  // Allow public read access to weather forecasts
      allow write: if request.auth != null;  // Only authenticated users can write
    }
    
    match /{document=**} {
      allow read, write: if request.auth != null;  // Keep other collections secure
    }
  }
} 